<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:background="@drawable/border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/recyclerEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kullanici@email.com"
            android:textColor="#888888"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true" />


        <TextView
            android:id="@+id/recyclerBaslikText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Gönderi Başlığı"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/recyclerImageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Gönderi Görseli"
            android:clipToOutline="true" />


        <TextView
            android:id="@+id/recyclerCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kullanıcı yorumu buraya gelecek..."
            android:textColor="#333333"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
